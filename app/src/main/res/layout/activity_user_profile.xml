<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_fragment_id">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="26dp"
        android:paddingRight="24dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/nombre_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Nombre" />
        <TextView
            android:id="@+id/nombre_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"/>
        <TextView
            android:id="@+id/correo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="Correo" />
        <TextView
            android:id="@+id/correo_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"/>
        <TextView
            android:id="@+id/numero_tarjeta_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"

            android:text="Nº tarjeta" />
        <TextView
            android:id="@+id/numero_tarjeta_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/foto_tarjeta_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="Foto de la tarjeta" />
        <ImageView
            android:id="@+id/foto_tarjeta_imagen"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_photo_camera"
            android:background="@color/grayGoogle"
            android:layout_margin="20dp"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/autoParking_checkBox"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Registro automático de aparcamiento"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <Button
            android:id="@+id/editar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar perfil"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>
        <Button
            android:id="@+id/cerrar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cerrar sesión"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>
        <Button
            android:id="@+id/borrar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Borrar perfil"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    </LinearLayout>

</RelativeLayout>